# Meet AI - Environment Variables Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Project Environment
# =============================================================================
# Values: production, development, test (this last one is not currently in use )
NODE_ENV='development'

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection URL for Neon database
# Format: postgresql://<user>:<password>@<host>/<database>?sslmode=require
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# =============================================================================
# Authentication Configuration
# =============================================================================
# Auth configuration for securing your application
BETTER_AUTH_SECRET="your-32-character-secret-key"
BETTER_AUTH_URL="http://localhost:3000"

# GitHub OAuth - Create at https://github.com/settings/developers
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Google OAuth - Create at https://console.cloud.google.com
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# Stream.io Configuration
# =============================================================================
# Video API - Get from Stream.io Dashboard
NEXT_PUBLIC_STREAM_VIDEO_API_KEY="your-stream-video-api-key"
STREAM_VIDEO_SECRET_KEY="your-stream-video-secret-key"

# Chat API - Get from Stream.io Dashboard
NEXT_PUBLIC_STREAM_CHAT_API_KEY="your-stream-chat-api-key"
STREAM_CHAT_SECRET_KEY="your-stream-chat-secret-key"

# =============================================================================
# OpenAI Configuration
# =============================================================================
# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key"

# =============================================================================
# Development Configuration
# =============================================================================
# Ngrok URL for webhook development (if using ngrok)
NGROK_URL="your-ngrok-url.ngrok-free.app"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# Payment Integration
# =============================================================================
# Polar access token - Get from Polar dashboard
POLAR_ACCESS_TOKEN="your-polar-access-token"

# =============================================================================
# Important Notes:
# =============================================================================
# 1. Never commit your actual .env file to version control
# 2. Keep your secret keys safe and never share them
# 3. In production, use secure secrets management
# 4. Rotate keys periodically for security
# 5. Use strong, unique values for all secrets
